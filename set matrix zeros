#include <bits/stdc++.h> 
void setZeros(vector<vector<int>> &matrix)
{
	// Write your code here.
    vector <int> x;
    vector <int> y;
    int N = matrix.size();
    int M = matrix[0].size();
    for(int i=0;i<N;i++){
        for(int j=0;j<M;j++){
            if(matrix[i][j]==0){
                x.push_back(i);
                y.push_back(j);
            }
        }
    }
    for(int i=0;i<x.size();i++){
        for(int j=0;j<M;j++){
            matrix[x[i]][j]=0;
        }
    }
    
    for(int i=0;i<N;i++){
        for(int j=0;j<y.size();j++){
            matrix[i][y[j]]=0;
        }
    }
    
}




**with constant space**

class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int N = matrix.size();
        int M = matrix[0].size();
        int cols =1;
        for(int i=0;i<N;i++){
            if(matrix[i][0]==0){
                cols = 0;
            }
            for(int j=1;j<M;j++){
                if(matrix[i][j] == 0){
                    matrix[0][j]=0;
                    matrix[i][0] =0;
                }
            }
        }
        
        for(int i=N-1;i>=0;i--){
            for(int j=M-1;j>=1;j--){
                if(matrix[0][j]==0 || matrix[i][0]==0){
                    matrix[i][j]=0;
                }
                
            }
            if(cols==0){
                    matrix[i][0] = 0;
                }
        }
        
    }
};
